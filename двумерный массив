Задача 1)
#include<stdio.h>
#include<stdlib.h>
int main()
{
    int i, j, n, k;
    scanf("%d %d", &n, &k);
    int arr[n][k];
    for(i=0;i<n;i++){
        for(j=0;j<k;j++)
            arr[i][j] = rand() % 100;
    }
    for(i=0;i<n;i++){
        for(j=0;j<k;j++)
            printf("%d ",arr[i][j]);
        printf("\n");
    }
}

#include<stdio.h>
#include<stdlib.h>
int main()
{
    int i, j, n, k;
    printf("Введите размер ");
    scanf("%d", &n);
    int arr[n][n];
    for(i=0;i<n;i++){
        for(j=0;j<n;j++){
            if (j=i)
                arr[i][j] = rand() % 100;
            else
                arr[i][j] = 0;
        }
    }
    printf("Матрица\n");
    for(i=0;i<n;i++){
        for(j=0;j<n;j++)
            printf("%d ",arr[i][j]);
        printf("\n");
    }
}
